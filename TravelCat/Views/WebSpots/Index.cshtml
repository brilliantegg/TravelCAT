﻿@model TravelCat.ViewModels.TaiwanViewModel
@using TravelCat.ViewModels
@{
    Layout = "~/Views/Shared/web-Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
