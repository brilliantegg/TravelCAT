@model TravelCat.ViewModels.SpotPhotoViewModel

@{
    ViewBag.Title = "新增景點";
}

    <link href="~/Content/back-end-Create.css" rel="stylesheet" />

<h2 class="ml-3 mt-3 text-danger">新增景點</h2>


<form action="/Spot/Create" method="post" enctype="multipart/form-data">

    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <!--名稱 電話-->
        <div class="row">
            <div class="co col-4">
                @Html.LabelFor(model => model.spot.spot_title, htmlAttributes: new { @class = "txt" })
                @Html.EditorFor(model => model.spot.spot_title, new { htmlAttributes = new { @class = "rounded" } })
                @Html.ValidationMessageFor(model => model.spot.spot_title, "", new { @class = "text-danger" })
            </div>
            <div class=" co col-4">
                @Html.LabelFor(model => model.spot.spot_tel, htmlAttributes: new { @class = "txt" })
                @Html.EditorFor(model => model.spot.spot_tel, new { htmlAttributes = new { @class = "rounded" } })
                @Html.ValidationMessageFor(model => model.spot.spot_tel, "", new { @class = "text-danger" })
            </div>
        </div>

        <!--簡介-->
        <div class="row">
            <div class="col-8">
                @Html.LabelFor(model => model.spot.spot_intro, htmlAttributes: new { @class = "" })
                @Html.EditorFor(model => model.spot.spot_intro, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.spot.spot_intro, "", new { @class = "text-danger" })
            </div>
        </div>


        <!--經緯度  頁面狀態-->
        <div class="row">
            <div class="col-2 text-nowrap">
                @Html.LabelFor(model => model.spot.longitude, htmlAttributes: new { @class = "" })
                @Html.EditorFor(model => model.spot.longitude, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.spot.longitude, "", new { @class = "text-danger" })
            </div>
            <div class=" col-2 text-nowrap">
                @Html.LabelFor(model => model.spot.latitude, htmlAttributes: new { @class = " " })
                @Html.EditorFor(model => model.spot.latitude, new { htmlAttributes = new { @class = " " } })
                @Html.ValidationMessageFor(model => model.spot.latitude, "", new { @class = "text-danger" })
            </div>
            <div class="col-2">
                @Html.LabelFor(model => model.spot.page_status, htmlAttributes: new { @class = " " })
                <span class="checkbox">
                    @Html.EditorFor(model => model.spot.page_status)
                    @Html.ValidationMessageFor(model => model.spot.page_status, "", new { @class = "text-danger" })
                </span>
            </div>
        </div>


        <!--備註-->
        <div class="row ">
            <div class="col-6">
                @Html.LabelFor(model => model.spot.addition_note, htmlAttributes: new { @class = " " })
                @Html.EditorFor(model => model.spot.addition_note, new { htmlAttributes = new { @class = " " } })
                @Html.ValidationMessageFor(model => model.spot.addition_note, "", new { @class = "text-danger" })
            </div>
        </div>


        <!--城市 行政區-->
        <div class="row ">
            <div class="col-3">
                @Html.LabelFor(model => model.spot.city, htmlAttributes: new { @class = " " })
                @Html.EditorFor(model => model.spot.city, new { htmlAttributes = new { @class = " " } })
                @Html.ValidationMessageFor(model => model.spot.city, "", new { @class = "text-danger" })
            </div>

            <div class=" col-3">
                @Html.LabelFor(model => model.spot.district, htmlAttributes: new { @class = " " })
                @Html.EditorFor(model => model.spot.district, new { htmlAttributes = new { @class = " " } })
                @Html.ValidationMessageFor(model => model.spot.district, "", new { @class = "text-danger" })
            </div>
        </div>


        <!--街道地址-->
        <div class="row ">
            <div class="col-6">
                @Html.LabelFor(model => model.spot.address_detail, htmlAttributes: new { @class = " " })
                @Html.EditorFor(model => model.spot.address_detail, new { htmlAttributes = new { @class = " " } })
                @Html.ValidationMessageFor(model => model.spot.address_detail, "", new { @class = "text-danger" })
            </div>
        </div>

        <!--營業時間 門票資訊-->
        <div class="row ">
            <div class="col-3">
                @Html.LabelFor(model => model.spot.open_time, htmlAttributes: new { @class = " " })
                @Html.EditorFor(model => model.spot.open_time, new { htmlAttributes = new { @class = " " } })
                @Html.ValidationMessageFor(model => model.spot.open_time, "", new { @class = "text-danger" })
            </div>

            <div class=" col-3">
                @Html.LabelFor(model => model.spot.ticket_info, htmlAttributes: new { @class = " " })
                @Html.EditorFor(model => model.spot.ticket_info, new { htmlAttributes = new { @class = " " } })
                @Html.ValidationMessageFor(model => model.spot.ticket_info, "", new { @class = "text-danger" })
            </div>
        </div>


        <!--新增圖片-->
        <div class=" row">
            <div class="col-6">
                @Html.LabelFor(model => model.spot_photos.tourism_photo1, htmlAttributes: new { @class = " " })
                <input id="tourism_photo" name="tourism_photo" type="file" class=" " />
                @Html.ValidationMessageFor(model => model.spot_photos.tourism_photo1, "", new { @class = "text-danger" })
            </div>
        </div>


        <!--下方按鈕-->
        <div class="row">
            <div class=" col-1">
                <input type="submit" value="新增" class="btn btn-primary" />
            </div>
            <div class="col-2">
                @Html.ActionLink("回到景點列表", "Index",null,new { @class="btn btn-primary"})
            </div>
        </div>




    </div>
</form>
  