@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<TravelCat.Models.spot>

@{
    ViewBag.Title = "景點列表";
}

<link href="~/Content/back-end-index.css" rel="stylesheet" />
<h2 class="mt-3 ml-3">景點</h2>
<div class="header ml-3">
    @Html.ActionLink("新增景點", "Create", "Spot", null, new { @class = "btn btn-secondary" })
    <div class="search">

        @*@Html.TextBox("id", "", new { @class = " border", @placeholder = "編號,名稱,城市,行政區" })

        @Html.ActionLink("查詢", "contentQuery", new { id = "id" }, new{@class="btn btn-default"})*@
        <form action="/Spots/Index" method="get">
            @Html.TextBox("id", "", new { @class = " border", @placeholder = "編號,名稱,城市,行政區" })
            <input class="btn btn-secondary" type="submit" value="查詢" />
        </form>

    </div>

</div>



<table class="table">
    <tr class="row ">
        <th class="col-1"></th>
        <th class="col-1">
            @Html.DisplayNameFor(model => model.First().spot_id)
        </th>
        <th class="col-2 text-truncate">
            @Html.DisplayNameFor(model => model.First().spot_title)
        </th>
        <th class="col-2 text-truncate">
            @Html.DisplayNameFor(model => model.First().spot_intro)
        </th>
        <th class="col-1">
            @Html.DisplayNameFor(model => model.First().city)
        </th>
        <th class="col-1">
            @Html.DisplayNameFor(model => model.First().district)
        </th>
        <th class="col-1">
            @Html.DisplayNameFor(model => model.First().open_time)
        </th>
        <th class="col-2">
            @Html.DisplayNameFor(model => model.First().update_date)
        </th>
        <th class="col-1">
            @Html.DisplayNameFor(model => model.First().page_status)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="row">
            <td class="col-1 text-center">
                @Html.ActionLink("檢視/修改", "Edit", new { id = item.spot_id }, new { @class = "btn btn-sm btn-outline-primary" })
            </td>
            <td class="col-1">
                @Html.DisplayFor(modelItem => item.spot_id)
            </td>
            <td class="col-2 text-truncate">
                @Html.DisplayFor(modelItem => item.spot_title)
            </td>
            <td class="col-2 text-truncate">
                @Html.DisplayFor(modelItem => item.spot_intro)
            </td>
            <td class="col-1">
                @Html.DisplayFor(modelItem => item.city)
            </td>
            <td class="col-1">
                @Html.DisplayFor(modelItem => item.district)
            </td>
            <td class="col-1">
                @Html.DisplayFor(modelItem => item.open_time)
            </td>
            <td class="col-2">
                @Html.DisplayFor(modelItem => item.update_date)
            </td>
            <td class="col-1">
                @Html.DisplayFor(modelItem => item.page_status)
            </td>
        </tr>
    }

</table>

<div class="text-center">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

