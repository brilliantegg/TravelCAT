            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.spot.page_status)
                    @Html.ValidationMessageFor(model => model.spot.page_status, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">圖片</label>
            <div class="col-md-10">
                <input id="tourism_photo" name="tourism_photo" type="file" class="form-control" />
                @if (Model.spot_photos.tourism_photo1 != null)
                {
                    @:原圖：<img src="/images/spot/@Model.spot_photos.tourism_photo1" width="150" />
                }
                else
                {
                    <h3>原無圖示</h3>
                }
                <input id="oldImg" name="oldImg" type="hidden" value="@Model.spot_photos.tourism_photo1" />
                @Html.ValidationMessageFor(model => model.spot_photos.tourism_photo1, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
