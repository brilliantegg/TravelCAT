@model TravelCat.ViewModels.SpotPhotoViewModel

@{
    ViewBag.Title = "修改景點";
}

<h2 class="text-center">修改景點</h2>

<form method="post" action="@Url.Action("Edit")" enctype="multipart/form-data">
 
        @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.spot.spot_id)

        <div class="form-group">
            @Html.LabelFor(model => model.spot.spot_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input id="spot_id" name="spot_id" type="text" readonly="readonly" value="@Model.spot.spot_id" class="form-control" />
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.spot.spot_title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.spot.spot_title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.spot.spot_title, "", new { @class = "text-danger" })
            </div>
        </div>

