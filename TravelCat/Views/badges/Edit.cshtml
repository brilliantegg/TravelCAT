@model TravelCat.Models.badge

@{
    ViewBag.Title = "徽章編輯頁面";
}

<h2>徽章編輯內容</h2>

<form method="post" action="@Url.Action("Edit")" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.badge_id)

            <div class="form-group">
                @Html.LabelFor(model => model.badge_title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.badge_title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.badge_title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">圖片</label>
                <div class="col-md-10">
                    <input id="badge_photo" name="badge_photo" type="file" class="form-control-lg" />
                    @if (Model.badge_photo != null)
                    {
                        @:原圖：<img src="/images/badges/@Model.badge_photo" width="150" />
                    }
                    else
                    {
                        <h3>原無圖示</h3>
                    }
                    <input id="oldImg" name="oldImg" type="hidden" value="@Model.badge_photo" />
                    @Html.ValidationMessageFor(model => model.badge_photo, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr/>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="儲存" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>

    <div>
        @Html.ActionLink("返回主頁", "Index","badges")
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
