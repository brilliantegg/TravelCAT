@model TravelCat.Models.member

@{
    ViewBag.Title = "ForgetPwd";
    Layout = "~/Views/Shared/web-Layout.cshtml";
}
<link href="~/Content/web-Login.css" rel="stylesheet" />

<div class="container">
    <div class="main">
        <div class="Login-box">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <h3>重設密碼</h3>
                <p>請填入申辦時的帳號跟信箱</p>
                <p>我們會將重設密碼的連結寄送至您的信箱</p>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-inline">
                    @Html.LabelFor(model => model.member_account, htmlAttributes: new { @class = "control-label" })
                    <input id="account" name="account" type="text" class="form-control ml-2" />
                    @Html.ValidationMessageFor(model => model.member_account, "", new { @class = "text-danger" })
                </div>

                <div class="form-inline mt-3">
                    @Html.LabelFor(model => model.member_profile.email, htmlAttributes: new { @class = "control-label " })
                    <input id="email" name="email" type="text" class="form-control ml-2" />
                    @Html.ValidationMessageFor(model => model.member_profile.email, "", new { @class = "text-danger" })
                </div>
                <span class="text-danger">@ViewBag.PwdErr</span>


                <div>
                    <input type="submit" id="submit" value="送出" class="btn btn-info mt-3 mr-3" />
                    @Html.ActionLink("返回登入頁", "Login", "Home", new { @class = "btn btn-info mt-3 ml-3" })
                </div>
            }


        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $('#submit').click(function () {
            if ($('#account').val() == "") {
                alert("請填入申辦的帳號");
                return false;
            }
            else if ($('#email').val() == "") {
                alert("請填入申辦的信箱");
                return false;
            }
            else
                return true;
        });
    </script>
}