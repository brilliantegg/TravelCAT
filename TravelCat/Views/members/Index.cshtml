@model IEnumerable<TravelCat.Models.member>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/back-end-index.css" rel="stylesheet" />

<h2 class="mt-3 text-center">管理會員</h2>

<div class="header ml-3">
    @*@Html.TextBox("id", "", new { @class = " border", @placeholder = "編號,名稱,城市,行政區" })
        @Html.ActionLink("查詢", "contentQuery", new { id = "id" }, new{@class="btn btn-default"})*@
    <div class="mr-1"></div>
    <form action="/Spot/Index" method="get" class="search">
        @Html.TextBox("id", "", new { @class = " border", @placeholder = "編號,名稱,城市,行政區" })
        <input class="btn btn-secondary" type="submit" value="查詢" />
    </form>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="list-group" id="list-tab" role="tablist">
            <a class="list-group-item active" data-toggle="list" href="#issue-member" role="tab">被檢舉會員</a>
            <a class="list-group-item" data-toggle="list" href="#member" role="tab">所有會員</a>
        </div>
    </div>
    <div class="col-md-12">
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="issue-member" role="tabpanel">
                @Html.Action("_ProblemMember", "members", new { id = 2 })
            </div>
            <div class="tab-pane fade" id="member" role="tabpanel">
                <table class="table">
                    <tr class="row">
                        <th class="col-3  text-center"></th>
                        <th class="col-3">
                            @Html.DisplayNameFor(model => model.member_id)
                        </th>
                        <th class="col-3">
                            @Html.DisplayNameFor(model => model.member_account)
                        </th>
                        <th class="col-3">
                            @Html.DisplayNameFor(model => model.member_status)
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr class="row">
                            <td class="col-3  text-center">
                                @Html.ActionLink("管理", "Edit", new { id = item.member_id }, new { @class = "btn btn-sm btn-outline-primary" })
                            </td>

                            <td class="col-3">
                                @Html.DisplayFor(modelItem => item.member_id)
                            </td>
                            <td class="col-3">
                                @Html.DisplayFor(modelItem => item.member_account)
                            </td>
                            <td class="col-3">
                                @Html.DisplayFor(modelItem => item.member_status)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>


