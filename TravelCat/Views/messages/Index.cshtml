@model IEnumerable<TravelCat.Models.message>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/back-end-index.css" rel="stylesheet" />
<h2 class="mt-3 text-center">管理留言</h2>

<div class="header ml-3">
    @*@Html.TextBox("id", "", new { @class = " border", @placeholder = "編號,名稱,城市,行政區" })
        @Html.ActionLink("查詢", "contentQuery", new { id = "id" }, new{@class="btn btn-default"})*@
    <div class="mr-1"></div>
    <form action="/Spot/Index" method="get" class="search">
        @Html.TextBox("id", "", new { @class = " border", @placeholder = "編號,名稱,城市,行政區" })
        <input class="btn btn-secondary" type="submit" value="查詢" />
    </form>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="list-group" id="list-tab" role="tablist">
            <a class="list-group-item active" data-toggle="list" href="#message1">被檢舉留言</a>
            <a class="list-group-item" data-toggle="list" href="#message2">所有留言</a>
        </div>
    </div>
    <div class="col-md-12">
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="message1">
                @Html.Action("_Problem", "issues", new { type_id = 4 })
            </div>
            <div class="tab-pane fade" id="message2">
                <table class="table">
                    <tr class="row">
                        <th class="col-1"></th>
                        <th class="col-1">
                            @Html.DisplayNameFor(model => model.msg_id)
                        </th>
                        <th class="col-1">
                            @Html.DisplayNameFor(model => model.comment.tourism_id)
                        </th>
                        <th class="col-2">
                            @Html.DisplayNameFor(model => model.member.member_account)
                        </th>
                        <th class="col-1">
                            @Html.DisplayNameFor(model => model.comment_id)
                        </th>
                        <th class="col-2">
                            @Html.DisplayNameFor(model => model.msg_time)
                        </th>
                        <th class="col-2 text-truncate">
                            @Html.DisplayNameFor(model => model.msg_content)
                        </th>
                        <th class="col-2">
                            @Html.DisplayNameFor(model => model.msg_status)
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr class="row">
                            <td class="col-1 text-center">
                                @Html.ActionLink("管理", "Edit", new { id = item.msg_id }, new { @class = "btn btn-sm btn-outline-primary" })
                            </td>
                            <td class="col-1">
                                @Html.DisplayFor(modelItem => item.msg_id)
                            </td>
                            <td class="col-1">
                                @Html.DisplayFor(modelItem => item.comment.tourism_id)
                            </td>
                            <td class="col-2">
                                @Html.DisplayFor(modelItem => item.member.member_account)
                            </td>
                            <td class="col-1">
                                @Html.DisplayFor(modelItem => item.comment_id)
                            </td>
                            <td class="col-2">
                                @Html.DisplayFor(modelItem => item.msg_time)
                            </td>
                            <td class="col-2 text-truncate">
                                @Html.DisplayFor(modelItem => item.msg_content)
                            </td>
                            <td class="col-2">
                                @if (item.msg_status == true)
                                {
                                    <span class="badge badge-success">顯示</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">隱藏</span>
                                }
                            </td>
                        </tr>
                    }

                </table>
            </div>



        </div>
    </div>
</div>
<script src="~/Scripts/bootstrap.js"></script>
