<link href="~/Content/Login-index.css" rel="stylesheet" />
@model TravelCat.Models.admin
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout 1.cshtml";
}

<div class="warp container">
    <div class="txt">
        <h1>旅途貓後台登入</h1>
    </div>

    <div class="login">
        <form id="login" class="form-horizontal" method="post" action="@Url.Action("Index")">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <input id="id" name="id" type="text" class="login-Id" required="required" placeholder="請輸入帳號"><br />
                <input id="pwd" name="pwd" type="password" class="login-Pw" required="required" placeholder="請輸入密碼"><br />
                <input type="checkbox" id="show_password" />顯示密碼
            </div>

            <h5><a href="@Url.Action("ForgetPwd","Loginadmin")" class="text-warning">忘記密碼?</a></h5>

            <div class="from-btn">
                <input id="Submit1" type="submit" value="登入" class="btn btn-primary" />
                <input id="Reset1" type="reset" value="清除" class="btn btn-primary" />
            </div>

            <h4 class="text-danger text-center">@ViewBag.LoginErr</h4>
        </form>

    </div>

</div>
@section scripts{
    <script>
        $('#show_password').click(function () {
            if ($('#pwd').attr("type") == "password") {
                $('#pwd').attr("type", "text");
            }
            else {
                $('#pwd').attr("type", "password");
            }
        });

    </script>

}



