@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> @ViewBag.Title- 旅途貓</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome-free-5.11.2-web/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="fontawesome-free-5.11.2-web/css/all.css">
    <link href="~/Content/web-Layout.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="header">
            <div class="header-bar">
                <a href="#" class="logo">
                    <img src="~/images/cat-face-with-wry-smile_1f63c.png "  width="50" />
                    旅途貓
                </a>
                <div class="search">
                    <input type="text" class="search-txt">
                    <i class="fas fa-search"></i>
                    <a href="#" class="memberId">
                        <i class="far fa-user"></i>
                        @if (Request.IsAuthenticated)
                        {
                            <p>@User.Identity.GetUserName()</p>
                            
                        }
                        else {
                    <span>請登入</span>
                                }
                    </a>
                </div>
            </div>
        </div>
    </header>
    
    <div class="top-bar">
        <div class="pic">
            <img src="~/images/bled-1899264_1920.jpg" />
        </div>
        <ul class="body-menu">
            <li><a href="#"><i class=" fas fa-map-marked-alt"><br>景點</i></a></li>
            <li><a href="#"><i class="fas fa-running"><br>活動</i></a></li>
            <li><a href="#"><i class="fas fa-hamburger"><br>餐廳</i></a></li>
            <li><a href="#"><i class="fas fa-building"><br>飯店</i></a></li>
        </ul>
    </div>

    @RenderBody()
    <footer class="footer">行動商務第2組專題</footer>


    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>










