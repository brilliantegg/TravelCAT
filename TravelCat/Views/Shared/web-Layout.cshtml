@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> @ViewBag.Title- 旅途貓</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome-free-5.11.2-web/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="fontawesome-free-5.11.2-web/css/all.css">
    <link href="~/Content/web-Layout.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="header">
            <div class="header-bar">
                <a href="@Url.Action("Index","Home")" class="logo">
                    <img src="~/images/cat-face-with-wry-smile_1f63c.png " width="50px" />
                    旅途貓
                </a>
                @if (Request.IsAuthenticated)
                {
                    <div>
                        @Html.ActionLink(@User.Identity.GetUserName(), "Index", "web_Member_Index", new { id = Session["memberID"]  }, new { @class = " far fa-user memberId" })
                        @Html.ActionLink("登出", "LogOut", "Home", null, new { @class = " text-dark" })
                    </div>


                }
                else
                {
                    <div>
                        @Html.ActionLink("登入", "LogIn", "Home", null, new { @class = " far fa-user " })
                        @Html.ActionLink("註冊", "Index", "Register")
                    </div>
                }

            </div>           
        </div>
    </header>
    <div class="top-bar">
        <ul class="body-menu">
            <li><a href="#"><i class=" fas fa-map-marked-alt">景點</i></a></li>
            <li>@Html.ActionLink("活動", "Index", "web_activities", null, new { @class = " fas fa-running" })</li>
            <li><a href="#"><i class="fas fa-hamburger">餐廳</i></a></li>
            <li><a href="#"><i class="fas fa-building">飯店</i></a></li>
            <li class="search">
                <input type="text" class="search-txt">
                <i class="fas fa-search"></i>
            </li>
        </ul>
    </div>

    @RenderBody()


    <footer class="footer">行動商務第2組專題</footer>


    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>










