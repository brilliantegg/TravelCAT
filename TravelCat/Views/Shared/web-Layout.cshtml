@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> @ViewBag.Title- 旅途貓</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome-free-5.11.2-web/css/all.css" rel="stylesheet" />
    <link href="~/Content/web-Layout.css" rel="stylesheet" />
</head>
<body>
    @{ string mem_id;
        if (Session["memberID"] == null || string.IsNullOrWhiteSpace(Session["memberID"].ToString()))
        {
            mem_id = "null";
        }
        else
        {
            mem_id = Session["memberID"].ToString();
        }
    }
    <header>
        <div class="header">
            <div class="header-bar">
                <a href="/Home/Index" class="logo">
                    <img src="~/images/cat-face-with-wry-smile_1f63c.png " width="50" />
                    旅途貓
                </a>

                @if (Request.IsAuthenticated && Session["memberID"] != null)
                {
                    <div>
                        @Html.ActionLink(@User.Identity.GetUserName(), "Index", "web_Member_Index", new { id = mem_id }, new { @class = " far fa-user memberId" })

                        @Html.ActionLink("登出", "LogOut", "Home", null, new { @class = " text-dark" })
                    </div>
                }
                else
                {
                    <div>
                        @Html.ActionLink("登入", "LogIn", "Home", null, new { @class = " far fa-user " })
                        @Html.ActionLink("註冊", "Index", "Register", null, new { @class = " far" })
                    </div>
                }
            </div>
        </div>
    </header>
    <div class="top-bar">
        <ul class="body-menu">

            <li><a href="#"><i class=" fas fa-map-marked-alt">景點</i></a></li>
            @Html.ActionLink("活動", "Index", "web_activities", null, new { @class = " fas fa-running text-info" })
            <li><a href="#"><i class="fas fa-hamburger">餐廳</i></a></li>
            <li><a href="#"><i class="fas fa-building">飯店</i></a></li>
            <li class="search">
                <form action="/Search/Index" method="get">
                    <input name="q" type="text" class="search-txt">
                    <button class="fas fa-search" type="submit" style="display: inline-block; margin-left: -4px;"></button>
                </form>
            </li>
        </ul>
    </div>




    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    @RenderBody()
    @RenderSection("scripts", required: false)
    @*<footer class="footer">行動商務第2組專題</footer>*@
</body>
</html>










