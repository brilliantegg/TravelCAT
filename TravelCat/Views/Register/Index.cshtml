        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.member.member_password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.member.member_password, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.member.member_password, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
