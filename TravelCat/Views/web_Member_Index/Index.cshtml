<link href="~/Content/MemberIndex.css" rel="stylesheet" />
@model TravelCat.ViewModels.MemberIndexViewModels
@{
    ViewBag.Title = "member_index";
    Layout = "~/Views/Shared/web-Layout.cshtml";
}


<ol class="breadcrumb pl-0">

    <li class="breadcrumb-item"><a href="#" class="text-catcolor">首頁</a></li>
    <li class="breadcrumb-item"><a href="#" class="text-catcolor">景點</a></li>
    <li class="breadcrumb-item"><a href="#" class="text-catcolor">自由廣場</a></li>
    <li class="breadcrumb-item active" aria-current="page">評論</li>
</ol>
<div class="jumbotron jumbotron-fluid text-catcolor">
    <div class="container text-center text-info  ">
        <h1 class="display-4  ">背景照片</h1>
        <a href="#"><p class="lead"><i class="far fa-images mr-3"></i>新增背景照片.</p></a>
    </div>

</div>
<div class="box1">

</div>




<div class=" container">
    <div class="user_profile_header media">

        <img src="~/images/member/@Model.member_profile.profile_photo" class="member_avatar align-self-start my-3 mx-3 img-circle：border-radius:100%  rounded-circle" alt="@Model.member_profile.profile_photo">


        <div class="media-body">
            <h2 class="mt-3">@Model.member_profile.nickname</h2>

            @Html.ActionLink("編輯個人資料", "EditMemberProfile", "web_Member_Index", new { id = Model.member.member_id }, new { @class = "btn btn-outline-info" })<br />
            @Html.ActionLink("修改密碼", "Editpassword", "web_Member_Index", new { id = Model.member.member_id }, new { @class = "btn btn-outline-info mt-2" })
            <div class="row mt-5">
                <div class="col-md-1 ">
                    <p>評論數 <a>5</a></p>
                </div>
                <div class="col-md-1">
                    <p>追蹤者 <a>5</a></p>
                </div>
                <div class="col-md-1">
                    <p>關注中 <a>5</a></p>
                </div>
            </div>
        </div>
    </div>
    <div class="row ">
        <div class="col-3 border-info mt-2 bg-light" style="background-color:azure">
            <div class="text-left" style="height:50px ;border:inherit">
                <div>簡介</div>
                <div>
                    <ul>
                        <li>會員暱稱:<span>@Model.member_profile.nickname</span></li>
                        <li>國家:<span>@Model.member_profile.nation</span></li>
                        <li>城市:<span>@Model.member_profile.city</span></li>
                        <li>網站:<span>@Model.member_profile.website_link</span></li>
                        <li>信箱驗證狀態:<span>@Model.member_profile.emailConfirmed</span></li>
                    </ul>

                </div>

                @Html.ActionLink("更改信箱", "Editemail", "web_Member_Index", new { id = Model.member.member_id }, new { @class = "btn btn-outline-info" })
                <button type="button" class="btn btn-outline-info my-1" data-toggle="modal" data-target="#exampleModalCenter">
                    +  新增您目前所在城市
                </button>
                <button type="button" class="btn btn-outline-info  my-1" data-toggle="modal" data-target="#exampleModalCenter2">
                    + 新增一個網站
                </button>
                <button type="button" class="btn btn-outline-info  my-1" data-toggle="modal" data-target="#exampleModalCenter3">
                    + 介紹一下您自己
                </button>

                <!-- Modal -->
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalCenterTitle">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body  ">
                                <div class="row">
                                    <div class="col-md-5 mr-1">
                                        <a href="#">
                                            <div style="width:100%;background-color:#00cc99;border-radius:100%;height:176.66px;position:relative;">
                                                <div style="position:relative;top:0%;left:0% " class="text-white ">
                                                    <img src="~/images/member/@Model.member_profile.profile_photo" class="w-100 h-100" style="border-radius:100% ; ">

                                                    <div style="position:absolute;bottom:30%;left:30% " class="text-white ">
                                                        <i class="far fa-images"></i>
                                                        <span class="lead">變更照片.</span>
                                                    </div>
                                                </div>

                                            </div>
                                        </a>
                                    </div>
                                    <div class="col-md-10">
                                        <label for="exampleFormControlTextarea1">
                                            暱稱
                                        </label>
                                        <br />
                                        <input id="Text1" type="text" class="w-100" />
                                        <br />
                                        <label for="exampleFormControlTextarea1">你的國家是?</label>
                                        <br />
                                        <div class="dropdown">
                                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                請選擇國家
                                            </button>

                                            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                                <button class="dropdown-item" type="button">台灣</button>
                                                <button class="dropdown-item" type="button">日本</button>
                                                <button class="dropdown-item" type="button">韓國</button>
                                                <button class="dropdown-item" type="button">大陸</button>
                                            </div>
                                        </div>
                                        <label for="exampleFormControlTextarea1">你的城市是?</label>
                                        <br />
                                        <div class="dropdown">
                                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                請選擇城市
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                                <button class="dropdown-item" type="button">高雄</button>
                                                <button class="dropdown-item" type="button">台北</button>
                                                <button class="dropdown-item" type="button">台中</button>
                                                <button class="dropdown-item" type="button">台東</button>
                                            </div>
                                        </div>

                                        <label for="exampleFormControlTextarea1">
                                            詳細地址
                                        </label>
                                        <br />
                                        <input id="Text1" type="text" class="w-100" />


                                    </div>


                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="exampleModalCenter2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalCenterTitle">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                123456789
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="exampleModalCenter3" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalCenterTitle">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                ...
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>




            </div>

        </div>
        <div class="col-9 mt-2" style="height:300px ">
            <ul class="nav nav-pills mb-3 " id="pills-tab" role="tablist">
                <li class="nav-item ">
                    <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">個人評論</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">追蹤評論</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">徽章牆</a>
                </li>

            </ul>
            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">



                </div>

                <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">...</div>

                <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">...</div>
            </div>
        </div>

    </div>


</div>

