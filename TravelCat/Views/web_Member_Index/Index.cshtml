<script>
        $(".follwered_btn").click(function(){
            getfollowed();
        });
        function getfollowed() {
        $.post("@Url.Action("getfollowed","web_Member_Index")",
            {
                member_id: "@memberId",
                followed_id: $(".follwered_btn").val()
            })
            .done(function () {
                alert( `跟蹤成功` );
            })
            .fail(function() {
                alert( `跟蹤失敗` );
            })
        }
</script>