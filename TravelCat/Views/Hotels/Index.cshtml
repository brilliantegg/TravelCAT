@model IEnumerable<TravelCat.Models.hotel>

@{
    ViewBag.Title = "Index";
}

    <link href="~/Content/back-end-index.css" rel="stylesheet" />
<h2 class="mt-3 ml-3">飯店</h2>

<div class="header ml-3">
    @Html.ActionLink("新增飯店", "Create", "Hotels", null, new { @class = "btn btn-secondary" })
    <div class="search">
        @Html.TextBox("id", "", new { @class = " border", @placeholder = "編號,名稱,城市,行政區" })
        <input class="btn btn-secondary" type="submit" value="查詢" />
    </div>
</div>


<table class="table">
    <tr class="row">
        <th class="col-1"></th>
        <th class="col-1">
            @Html.DisplayNameFor(model => model.hotel_id)
        </th>
        <th class="col-2 text-truncate">
            @Html.DisplayNameFor(model => model.hotel_title)
        </th>
        <th class="col-1">
            @Html.DisplayNameFor(model => model.hotel_tel)
        </th>
        <th class="col-3 text-truncate">
            @Html.DisplayNameFor(model => model.hotel_intro)
        </th>
        <th class="col-1">
            @Html.DisplayNameFor(model => model.city)
        </th>
        <th class="col-1">
            @Html.DisplayNameFor(model => model.district)
        </th>
        <th class="col-1">
            @Html.DisplayNameFor(model => model.address_detail)
        </th>
        <th class="col-1">
            @Html.DisplayNameFor(model => model.page_status)
        </th>
    </tr>

@foreach (var item in Model) {
<tr class="row">
    <td class="col-1 text-center">
        @Html.ActionLink("檢視/修改", "Edit", new { id = item.hotel_id }, new { @class = "btn btn-sm btn-outline-primary" })
    </td>
    <td class="col-1">
        @Html.DisplayFor(modelItem => item.hotel_id)
    </td>
    <td class="col-2 text-truncate">
        @Html.DisplayFor(modelItem => item.hotel_title)
    </td>
    <td class="col-1">
        @Html.DisplayFor(modelItem => item.hotel_tel)
    </td>
    <td class="col-3 text-truncate">
        @Html.DisplayFor(modelItem => item.hotel_intro)
    </td>
    <td class="col-1">
        @Html.DisplayFor(modelItem => item.city)
    </td>
    <td class="col-1">
        @Html.DisplayFor(modelItem => item.district)
    </td>
    <td class="col-1">
        @Html.DisplayFor(modelItem => item.address_detail)
    </td>
    <td class="col-1">
        @Html.DisplayFor(modelItem => item.page_status)
    </td>
</tr>
}

</table>
